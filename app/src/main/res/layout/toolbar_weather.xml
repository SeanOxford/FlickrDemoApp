<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:clickable="true"
    android:focusable="true">


    <ImageView
        android:id="@+id/ImageView_weather_toolbar_search"
        android:layout_width="@dimen/weather_toolbar_icon_dimen"
        android:layout_height="@dimen/weather_toolbar_icon_dimen"
        android:layout_marginRight="@dimen/base_margin"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/icon_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <EditText
        android:id="@+id/EditText_weather_toolbar"
        android:layout_width="@dimen/weather_toolbar_edittext_width"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/base_margin"
        android:imeOptions="actionSearch|flagNoExtractUi|flagNoFullscreen"
        android:inputType=""
        android:singleLine="true"
        android:textColor="@color/white"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ImageView_weather_toolbar_search"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>